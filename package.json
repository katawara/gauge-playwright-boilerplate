{
  "name": "gauge-playwright-boilerplate",
  "description": "A boilerplate for Gauge with Playwright",
  "keywords": [],
  "author": "https://github.com/katawara",
  "license": "MIT",
  "packageManager": "pnpm@10.17.0+sha512.fce8a3dd29a4ed2ec566fb53efbb04d8c44a0f05bc6f24a73046910fb9c3ce7afa35a0980500668fa3573345bd644644fa98338fa168235c80f4aa17aa17fbef",
  "scripts": {
    "run:all": "gauge run",
    "run:health-check": "gauge run --tags \"health-check\"",
    "run:sample": "gauge run --tags \"sample\"",
    "run:stable": "gauge run --tags \"stable\"",
    "run:wip": "gauge run --tags \"wip\"",
    "run:ci:health-check": "gauge run --env ci --tags \"health-check\"",
    "run:ci:sample": "gauge run --env ci --tags \"sample\"",
    "run:ci:stable": "gauge run --env ci --parallel --tags \"stable\" --max-retries-count=3",
    "run:ci:wip": "gauge run --env ci --parallel --tags \"wip\" --max-retries-count=3",
    "check:specs": "gauge validate",
    "check:specs:apply": "gauge format",
    "check:code": "biome check .",
    "check:code:apply": "biome check . --write",
    "check:all": "pnpm check:specs && pnpm check:code",
    "check:all:apply": "pnpm check:specs:apply && pnpm check:code:apply",
    "check:ci:code": "biome ci .",
    "compile": "pnpm exec tsc",
    "codegen": "playwright codegen",
    "codegen:sample": "playwright codegen \"https://hotel-example-site.takeyaqa.dev/ja/login.html\"",
    "show-trace": "playwright show-trace",
    "open-report": "open reports/html-report/index.html",
    "clean:node": "git clean -xdf node_modules",
    "clean:reports": "git clean -xdf reports",
    "clean:install": "pnpm clean:node && pnpm install && npx playwright install"
  },
  "dependencies": {
    "@playwright/test": "1.55.0",
    "dayjs": "1.11.18",
    "gauge-ts": "0.3.5",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.9.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@getgauge/cli": "1.6.20",
    "@types/node": "24.5.2"
  }
}
