{
  "name": "gauge-playwright-boilerplate",
  "description": "A boilerplate for Gauge with Playwright",
  "scripts": {
    "run:all": "gauge run",
    "run:sample": "gauge run --tags \"sample\"",
    "run:stable": "gauge run --tags \"stable\"",
    "run:wip": "gauge run --tags \"wip\"",
    "run:ci:sample": "gauge run --env ci --tags \"sample\"",
    "run:ci:stable": "gauge run --env ci --parallel --tags \"stable\" --max-retries-count=3",
    "run:ci:wip": "gauge run --env ci --parallel --tags \"wip\" --max-retries-count=3",
    "validate:specs": "gauge validate",
    "format:specs": "gauge format",
    "codegen": "playwright codegen",
    "codegen:sample": "playwright codegen \"https://hotel-example-site.takeyaqa.dev/ja/login.html\"",
    "show-trace": "playwright show-trace",
    "open-report": "open reports/html-report/index.html",
    "clean:node": "git clean -xdf node_modules",
    "clean:reports": "git clean -xdf reports",
    "clean:install": "pnpm clean:node && pnpm install"
  },
  "dependencies": {
    "@playwright/test": "1.55.0",
    "gauge-ts": "0.3.5",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.9.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@getgauge/cli": "1.6.20",
    "@types/node": "24.5.0"
  }
}
