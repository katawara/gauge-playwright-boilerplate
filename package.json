{
  "name": "gauge-playwright-boilerplate",
  "description": "A boilerplate for Gauge with Playwright",
  "keywords": [],
  "author": "https://github.com/katawara",
  "license": "MIT",
  "packageManager": "pnpm@10.30.1+sha512.3590e550d5384caa39bd5c7c739f72270234b2f6059e13018f975c313b1eb9fefcc09714048765d4d9efe961382c312e624572c0420762bdc5d5940cdf9be73a",
  "scripts": {
    "e2e": "gauge run",
    "e2e:all": "gauge run",
    "e2e:health-check": "gauge run --tags \"health-check\"",
    "e2e:sample": "gauge run --tags \"sample\"",
    "e2e:stable": "gauge run --tags \"stable\"",
    "e2e:wip": "gauge run --tags \"wip\"",
    "e2e:ci:health-check": "gauge run --env ci --tags \"health-check\"",
    "e2e:ci:sample": "gauge run --env ci --tags \"sample\"",
    "e2e:ci:stable": "gauge run --env ci --parallel --tags \"stable\" --max-retries-count=3",
    "e2e:ci:wip": "gauge run --env ci --parallel --tags \"wip\" --max-retries-count=3",
    "check:specs": "gauge validate",
    "check:specs:apply": "gauge format",
    "check:code": "biome check .",
    "check:code:apply": "biome check . --write",
    "check:all": "pnpm check:specs && pnpm check:code",
    "check:all:apply": "pnpm check:specs:apply && pnpm check:code:apply",
    "check:ci:code": "biome ci .",
    "compile": "pnpm exec tsc",
    "codegen": "playwright codegen",
    "codegen:sample": "playwright codegen \"https://hotel-example-site.takeyaqa.dev/ja/login.html\"",
    "show-trace": "playwright show-trace",
    "open-report": "open reports/html-report/index.html",
    "clean:node": "git clean -xdf node_modules",
    "clean:reports": "git clean -xdf reports",
    "clean:dist": "git clean -xdf dist",
    "clean:install": "pnpm clean:node && pnpm install && npx playwright install"
  },
  "dependencies": {
    "@playwright/test": "1.57.0",
    "dayjs": "1.11.19",
    "gauge-ts": "0.3.5",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.9.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@getgauge/cli": "1.6.22",
    "@types/node": "24.10.4"
  }
}
